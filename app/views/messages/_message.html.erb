<div class="row">
	<div  class="thumbnail thumbnail-message" style="opacity:100%;color:white;transparency:0">
		<br>
		<a href="<%= message_path(message) %>" style="text-decoration:none; color: #333333; ">
			<div class="col-md-2 text-center">
				<br>
				<%=  fa_icon( !MESSAGE_TYPES[message.message_type].nil? ? MESSAGE_TYPES[message.message_type] + ' 3x' : 'exclamation 3x' ,style:'color:red')  %>
			</div>

			<div class="col-md-6">
					<div class="caption-static">
						<h4 style="color:white" class="resize"><%= message.body.capitalize %></h4>
					</div> 
			</div>

			<div class="col-md-4">

				<div class="row text-center">
					<h4> Confidence </h4>
					<i><h3 style="color:red"> <%= message.confidence %> </h3></i>
					<%= message.transcribed_at.in_time_zone("Eastern Time (US & Canada)").strftime("%I:%M %p").to_s %>
				</div>
				
			</div>
		</a>
	</div>
</div>



