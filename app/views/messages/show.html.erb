
<div class="page-header">
	<h2><span style="color:red"><%= @message.message_type.capitalize %></span> in <%= @message.locale.city %>, <%= @message.locale.state %> </h2>
</div>

<div class="row">
	<div class="col-md-4 col-md-offset-2">

		<h4> "<%= @message.body %>" </h4>
		

	</div>

	<div class="col-md-4">
		<div class="row text-center">
			<h4> Confidence </h4>
			<i><h3 style="color:red"> <%= @message.confidence %> </h3></i>
			<%= @message.transcribed_at.in_time_zone("Eastern Time (US & Canada)").strftime("%I:%M %p").to_s %>
		</div>
	</div>

</div>


